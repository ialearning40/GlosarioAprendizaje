
def PromedioNotas():
    Notas = []
    CantidadNotas = int(input("Ingrese la cantidad de notas a promediar: "))
    for i in range(CantidadNotas):
        while True:
            try:
                NotaTemp = float(input(f"Ingrese la nota {i+1}: "))
                if DatoValido(NotaTemp):
                    Notas.append(NotaTemp)
                    break
            except ValueError:
                print("Error: Entrada no válida. Por favor, ingrese un número.")
    Promedio = sum(Notas) / CantidadNotas
    print(f"El promedio de las notas es: {Promedio:.2f}")
    if Promedio >= 3.0:
        print("¡Felicidades! Has aprobado.")
    else:
        print("Lo siento, has reprobado.")
    
def DatoValido(nota):
    if 0 <= nota <= 5:
        return True
    else:
        print("La nota debe estar entre 0 y 5.")
        return False

PromedioNotas()

